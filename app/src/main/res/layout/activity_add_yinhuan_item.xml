<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="1dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="0dp">
    <!--加上以上两个属性防止刚进入Activity时EditText抢占焦点-->

    <TextView
        android:id="@+id/Yinhuan_tv_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="1"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/Yinhuan_et_yinhuan_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:hint="@string/Yinhuan_Add_Yinhuan_hint2"
        android:padding="4dp"
        android:textSize="14sp" />

    <!--给ImageView设置padding效果不明显，所有加上一个布局以扩大点击范围-->
    <LinearLayout
        android:id="@+id/Yinhuan_ll_delete_item"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/bg_default_item_selector"
        android:gravity="center">
        <ImageView
            android:id="@+id/Yinhuan_iv_delete_item"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@mipmap/item_delete"
            android:padding="14dp" />
    </LinearLayout>

</LinearLayout>